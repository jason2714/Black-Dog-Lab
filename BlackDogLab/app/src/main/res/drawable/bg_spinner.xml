<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape>
            <size android:width="@dimen/note_spinner_width"
                android:height="@dimen/note_spinner_height"/>
            <stroke
                android:width="1dp"
                android:color="#B6B4B4" />
            <corners android:radius="10dp" />
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|end"
        android:right="20dp">
        <selector>
            <item android:state_window_focused="true"
                android:drawable="@android:drawable/arrow_down_float"/>
            <item android:state_window_focused="false"
                android:drawable="@android:drawable/arrow_up_float"/>
        </selector>
    </item>
</layer-list>
