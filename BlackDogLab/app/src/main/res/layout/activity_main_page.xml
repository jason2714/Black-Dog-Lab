<!--            android:layout_height="wrap_content"-->
<!--            android:icon="@drawable/icon_record_video" />-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:icon="@drawable/icon_recording" />-->

