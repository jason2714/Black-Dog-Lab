<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_dog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdl_dog_ntf_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="230dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdl_dog_house_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="18dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdl_dog_house_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="146dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdl_dog_house_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="277dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_dog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/bg_dog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.jason.blackdoglab.view.FrameSurfaceView
        android:id="@+id/yellow_dog"
        android:layout_width="@dimen/dog_main"
        android:layout_height="@dimen/dog_main"
        android:translationX="-40dp"
        android:translationY="287dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jason.blackdoglab.view.FrameSurfaceView
        android:id="@+id/blue_dog"
        android:layout_width="@dimen/dog_main"
        android:layout_height="@dimen/dog_main"
        android:translationX="100dp"
        android:translationY="287dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jason.blackdoglab.view.FrameSurfaceView
        android:id="@+id/red_dog"
        android:layout_width="@dimen/dog_main"
        android:layout_height="@dimen/dog_main"
        android:translationX="300dp"
        android:translationY="287dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_dog_right"
        android:layout_width="@dimen/main_page_triangle"
        android:layout_height="@dimen/main_page_triangle"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_main_right_triangle"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_dog_left"
        android:layout_width="@dimen/main_page_triangle"
        android:layout_height="@dimen/main_page_triangle"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_main_left_triangle"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dog_ntf_yellow"
        android:layout_width="@dimen/dog_ntf_width"
        android:layout_height="@dimen/dog_ntf_height"
        app:layout_constraintStart_toEndOf="@id/gdl_dog_house_yellow"
        app:layout_constraintTop_toBottomOf="@id/gdl_dog_ntf_top" />

    <ImageView
        android:id="@+id/dog_ntf_blue"
        android:layout_width="@dimen/dog_ntf_width"
        android:layout_height="@dimen/dog_ntf_height"
        app:layout_constraintStart_toEndOf="@id/gdl_dog_house_blue"
        app:layout_constraintTop_toBottomOf="@id/gdl_dog_ntf_top" />

    <ImageView
        android:id="@+id/dog_ntf_red"
        android:layout_width="@dimen/dog_ntf_width"
        android:layout_height="@dimen/dog_ntf_height"
        app:layout_constraintStart_toEndOf="@id/gdl_dog_house_red"
        app:layout_constraintTop_toBottomOf="@id/gdl_dog_ntf_top" />

    <LinearLayout
        android:id="@+id/ll_dog_btn_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/img_three_bowls"
            android:layout_width="295dp"
            android:layout_height="67dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>